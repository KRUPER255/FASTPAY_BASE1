# FastPay Backend Environment Variables
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production or .env.local to version control

# ============================================================================
# Django Configuration
# ============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-secret-key-here-generate-with-secrets-token-urlsafe
DEBUG=False
ALLOWED_HOSTS=fastpaygaming.com,www.fastpaygaming.com,api.fastpaygaming.com,owner.fastpaygaming.com,your-ip-address,localhost,127.0.0.1

# ============================================================================
# Database Configuration
# ============================================================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=fastpay_db
DB_USER=fastpay_user
DB_PASSWORD=your-secure-database-password-here
DB_HOST=db
DB_PORT=5432

# ============================================================================
# CORS Settings
# ============================================================================
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com,https://api.your-domain.com

# ============================================================================
# Firebase Configuration
# ============================================================================
# Firebase Realtime Database URL
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com
# Path to Firebase service account credentials JSON file
FIREBASE_CREDENTIALS_PATH=/app/firebase-credentials.json

# Firebase sync and cleanup (periodic task: sync to Django then trim Firebase)
# FIREBASE_SYNC_KEEP_MESSAGES=100
# FIREBASE_SYNC_KEEP_NOTIFICATIONS=100
# FIREBASE_SYNC_KEEP_CONTACTS=0

# ============================================================================
# Google OAuth Configuration for Gmail & Drive Integration
# ============================================================================
# Get these from Google Cloud Console: https://console.cloud.google.com/
# GOOGLE_REDIRECT_URI must be the BACKEND callback URL (where Google redirects after auth).
# When API is on a subdomain: https://api.your-domain.com/api/gmail/callback/
# Add this exact URI to "Authorized redirect URIs" in Google Cloud Console.
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=https://api.your-domain.com/api/gmail/callback/

# When set, after Gmail/Drive OAuth callback the user is redirected here (dashboard origin).
# Required for domain deployment so users land back on the dashboard, not on JSON.
# Example: https://staging.fastpaygaming.com or https://dashboard.your-domain.com
DASHBOARD_ORIGIN=

# ============================================================================
# HTTPS Configuration
# ============================================================================
USE_HTTPS=True

# ============================================================================
# Optional: Email Configuration
# ============================================================================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=True

# ============================================================================
# Telegram Bot Notifications
# ============================================================================
# PREFERRED: Configure bots via Dashboard UI (Settings > Telegram Bots)
# Bots configured in the database take precedence over environment variables.
#
# FALLBACK: Environment variable configuration (optional)
# These are used only when no database bot is found for a given bot_name/bot_id
#
# Default bot config (used when no bot_name or bot_id is specified)
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_CHAT_IDS=123456789,987654321
#
# Alert throttling (applies to all bots)
# TELEGRAM_ALERT_THROTTLE_SECONDS=60
#
# Named bot configs via environment (legacy, prefer database)
# TELEGRAM_BOT_CONFIGS=[{"name":"alerts","token":"bot-token","chat_ids":["123456789"]}]

# ============================================================================
# Redis / Celery (optional; default below used if not set)
# ============================================================================
# REDIS_URL=redis://redis:6379/0

# ============================================================================
# BlackSMS Configuration
# ============================================================================
BLACKSMS_API_KEY=your-blacksms-api-key
BLACKSMS_SENDER_ID=your-blacksms-sender-id

# ============================================================================
# Security Notes
# ============================================================================
# - Never commit this file with real credentials
# - Use strong, unique passwords for all services
# - Rotate credentials regularly
# - Set file permissions: chmod 600 .env.production
# - Keep firebase-credentials.json secure and never commit it
