# FastPay Environment Variables
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# ============================================================================
# API Configuration
# ============================================================================
# REQUIRED in production. When deployed on a domain, set to your backend API origin.
# Example: https://sapi.fastpaygaming.com (no trailing slash)
# Gmail/Drive OAuth is handled by the backend; ensure backend has GOOGLE_REDIRECT_URI and DASHBOARD_ORIGIN set.
VITE_API_BASE_URL=

# Optional: API client retry and timeout (defaults in code if unset)
# VITE_API_MAX_RETRIES=3
# VITE_API_TIMEOUT_MS=30000
# VITE_API_INITIAL_BACKOFF_MS=1000

# BlackSMS API Configuration
VITE_BLACKSMS_AUTH_TOKEN=your_black_sms_auth_token_here
VITE_BLACKSMS_API_URL=https://blacksms.in

# ============================================================================
# Firebase Configuration (REQUIRED)
# ============================================================================
# Single JSON string containing all Firebase config values
VITE_FIREBASE_CONFIG=
# ============================================================================
# RedPay-only build (required for RedPay deploy)
# ============================================================================
# Set to true for RedPay-only build (login + minimal dashboard). Used by deploy.sh if not set.
VITE_REDPAY_ONLY=true
# Optional: override app name shown in UI (default: REDPAY when VITE_REDPAY_ONLY=true)
# VITE_APP_NAME=REDPAY

# ============================================================================
# Dashboard layout theme (optional)
# ============================================================================
# Choose default dashboard layout: default | shadcn (rebuild required)
# VITE_DASHBOARD_LAYOUT_THEME=default

# ============================================================================
# Error Tracking & Monitoring (Optional)
# ============================================================================

VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

# ============================================================================
# Server Configuration (for server.js)
# ============================================================================

PORT=3001
BLACKSMS_AUTH_TOKEN=your_black_sms_auth_token_here

# ============================================================================
# Notes
# ============================================================================
# - VITE_ prefix: Variables prefixed with VITE_ are exposed to client-side code
# - Server variables (without VITE_): Only available in Node.js (server.js)
# - Firebase config is now required - no fallback values in code

# ============================================================================
# Gmail / Drive (optional – backend flow used when VITE_API_BASE_URL points to API)
# ============================================================================
# Only needed for legacy client-side token exchange. Domain deployment uses backend OAuth.
# SECURITY: Do NOT put the real client secret in VITE_GOOGLE_CLIENT_SECRET – VITE_ vars
# are embedded in the frontend bundle. Use GOOGLE_CLIENT_SECRET only (server-side in server.js).
VITE_GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
# VITE_GOOGLE_CLIENT_SECRET=  # Do not set real secret here (would leak into client build)
VITE_GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# Server-only (server.js legacy token exchange) – safe; not exposed to client
GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback
